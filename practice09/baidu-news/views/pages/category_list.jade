extends ../layout

block content
    .container
        a.btn.btn-link(href="/admin/") 新闻管理页
        a.btn.btn-success.navbar-right(href="/admin/category/new") 新增
        .row
            table.table.table-hover.table-bordered.text-center
                thead
                    tr
                        th 新闻分类
                        th 时间
                        th 修改
                        th 删除
                tbody
                    each item in categories
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{moment(item.meta.updateTime).format('MM/DD/YYYY')}
                            //- td: a(target="_blank", href="../movie/#{item._id}") 查看
                            td: a(target="_blank", href="/admin/category/update/#{item._id}") 修改
                            td
                                button.btn.btn-danger.del-category(type="button", data-id="#{item._id}") 删除

    script(src="/javascripts/admin.js")

