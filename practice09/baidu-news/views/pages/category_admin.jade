extends ../layout

block content
    .container
        .row
            form.form-horizontal(method="post", action="/admin/category")
                //- 隐藏表单域，更新数据
                if category._id
                    input(type="hidden", name="category[_id]", value=category._id)
                .form-group
                    label.col-sm-2.control-label(for="inputCategory") 新闻分类
                    .col-sm-10
                        input#inputCategory.form-control(type="text", name="category[name]", value=category.name, required="required")
                .form-group
                    .col-sm-offset-2.col-sm-10
                        button.btn.btn-success(type="submit") 录入
